[alias]
  # View abbreviated SHA, description, and commits history graph
  l = log --oneline --graph
	# View the current working tree status using the short format
	s = status --short
  # Amend the currently staged files to the latest commit
	a = commit --amend --reuse-message=HEAD
  # Commit all changes
	ca = !git add --all && git commit --all --verbose

[user]
