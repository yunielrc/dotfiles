#!/usr/bin/env bash

# dependencies
sudo apt-get install build-essential curl git
# install
curl -fsSL 'https://raw.githubusercontent.com/Homebrew/install/master/install.sh' | bash
# configure
echo "eval \$(/home/linuxbrew/.linuxbrew/bin/brew shellenv)" >> ~/.profile
# test
brew install hello


