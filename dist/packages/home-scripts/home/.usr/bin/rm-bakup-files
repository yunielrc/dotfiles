#!/usr/bin/env bash

# Delete backup files with pattern '.*~$'

set -euEo pipefail

readonly SCRIPT_NAME="$(basename "${0}")"

if [[ $# != 1  ]]; then
  echo -e "Missing argument: 'path'\n" >&2
  cat <<-HELPMSG
Usage:
${SCRIPT_NAME} path

Delete backup files: '.*~$'

Example:
${SCRIPT_NAME} ~

HELPMSG

exit 10
fi

find "$1" -type f,l -regex '.*~$' -delete
