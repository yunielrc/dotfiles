#!/usr/bin/env bash
# shellcheck disable=SC2154,SC2139

# Easier navigation: .., ..., ...., ....., ~ and -
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ~="cd ~" # `cd` is probably faster to type though
alias -- -="cd -"
alias cdt='cd $(mktemp -d)'

# Network
alias net-public-ip='dig +short myip.opendns.com @resolver1.opendns.com'

alias export_proxy="export http_proxy=${PROXY}"
alias rmac="openssl rand -hex 6 | sed 's/\(..\)/\1:/g; s/:$//'"

# proxmox server
alias proxmox-suspend='ssh proxmox systemctl suspend'
alias proxmox-poweroff='ssh proxmox poweroff'
alias proxmox-reboot='ssh proxmox reboot'
alias proxmox-wakeup="wakeonlan ${PROXMOX_MAC}"

# storage server
alias storage-wakeup="wakeonlan ${STORAGE_MAC}"

# tools
alias find="$FIND_COMMAND"
alias fd="$FD_COMMAND"
alias rg="rg --glob '!.apt-cacher-ng/' --glob '!.portainer/data'"
alias cca='ccze --mode=ansi'
alias df='df -hT -x squashfs'
alias lsblk='lsblk --exclude 7'
alias diff='diff -u --color=auto'
alias shred='shred -u'
alias vimfzf='vim $(fzf)'
alias du='du -bsh'
alias journalnav='journalctl --pager-end --follow | lnav'
alias bmon='bmon -b'

# services
alias weather='curl wttr.in/havana'

# bash
alias reload='exec $SHELL'
alias r='exec $SHELL'

# test
alias test-write-speed='dd if=/dev/zero of=/tmp/twspeed.img bs=1G count=2 oflag=dsync; rm -vf /tmp/twspeed.img'
alias test-download-speed="wget --report-speed=bits -O /dev/null http://ipv4.download.thinkbroadband.com/5MB.zip"
