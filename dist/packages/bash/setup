#!/usr/bin/env bash

set -euE

# Install

if [[ ! -f ~/.bashc ]]; then
  infn 'Symbolic link created: '
  ln --symbolic --verbose "${PKG_CONTENT}/.bashc" ~/.bashc
fi
# shellcheck disable=SC2088
if ! grep --silent '~/.bashc/init' ~/.bashrc ; then

  cat <<EOF >> ~/.bashrc
# BASHC
. ~/.bashc/init && bashc::main
# :BASHC
EOF
  inf "Added: '~/.bashc/init' to '$(realpath ~/.bashrc)'"
fi
